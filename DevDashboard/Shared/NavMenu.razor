@inject IJSRuntime JS;

<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href="">Dashboard</a>
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>

</div>

<div class="navDiv @NavMenuCssClass">
    <ul class="nav" style="text-align:end !important;">

        <li class="nav-item px-3 navBtns" style=" margin-top: -13px;">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <label class="navLbl">Home</label>
                <span class="oi oi-home" aria-hidden="true"></span>
            </NavLink>
        </li>

        <li class="nav-item px-3 navBtns">
            <NavLink class="nav-link" href="bestpractices">
                <label class="navLbl">Best Practices</label>
                <span class="oi oi-plus" aria-hidden="true"></span>
            </NavLink>
        </li>


        <li class="nav-item px-3 navBtns">
            <NavLink class="nav-link" href="codereviews">
                <label class="navLbl">Code Reviews</label>
                <span class="oi oi-plus" aria-hidden="true"></span>
            </NavLink>
        </li>

        <li class="nav-item px-3 navBtns">
            <NavLink class="nav-link" href="todolist">
                <label class="navLbl">To Do List</label>
                <span class="oi oi-plus" aria-hidden="true"></span>
            </NavLink>
        </li>

        <li class="nav-item px-3 navBtns">
            <NavLink class="nav-link" href="Snippets">
                <label class="navLbl">Coding Snippets</label>
                <span class="oi oi-plus" aria-hidden="true"></span>
            </NavLink>
        </li>

        <li class="nav-item px-3 navBtns">
            <NavLink class="nav-link" href="PlayGround">
                <label class="navLbl">Playground</label>
                <span class="oi oi-lightbulb" aria-hidden="true"></span>
            </NavLink>
        </li>

        <li class="nav-item px-3 navBtns">
             <div class="nav-link buttonAsNavlink" @onclick="Alert">
                <label class="navLbl">About</label>
                <span class="oi oi-lightbulb" aria-hidden="true"></span>
            </div>
        </li>
    </ul>

</div>

@code {
    private bool collapseNavMenu = true;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }

    const string message = "null reply"; //TO DO: Find out why Invoking JS Requires input?

    private string[] args = { message };

    private async Task Alert()
    {
        await JS.InvokeAsync<string>("showAbout", args); //This is an easy way to call JS method
    }
}
